# ============================================
# LicitaForense Monitor - Configuration
# Copy this file to .env and fill in values
# ============================================

# App Settings
APP_NAME="LicitaForense Monitor"
APP_VERSION="1.0.0"
DEBUG=false
SECRET_KEY=change-this-to-a-random-secret-key

# Database (SQLite by default, change for PostgreSQL in production)
DATABASE_URL=sqlite+aiosqlite:///./licitaciones.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/licitaciones

# Web Server
HOST=0.0.0.0
PORT=8000

# Scheduler
SCAN_INTERVAL_HOURS=4
SCAN_ON_STARTUP=true

# HTTP Client
API_TIMEOUT=30
MAX_RETRIES=3
REQUEST_DELAY_SECONDS=2

# Email Alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
ALERT_EMAIL_FROM=tu-email@gmail.com
ALERT_EMAIL_TO=destinatario@gmail.com
ALERTS_ENABLED=false

# Data directory
DATA_DIR=data

# Max results per scraper run
MAX_RESULTS_PER_RUN=500
